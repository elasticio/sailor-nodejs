{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine Current File",
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine",
            "args": [
                "--color",
                "${relativeFile}"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${relativeFile}"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
